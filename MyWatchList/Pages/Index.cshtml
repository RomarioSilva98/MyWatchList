@page
@model MyWatchList.Pages.IndexModel

<h1>🎬 MyWatchList</h1>

<form method="get">
    <input type="text" name="query" value="@Model.Query" placeholder="Buscar obras..." />
    <button type="submit">Buscar</button>
</form>

<hr />

@if (!string.IsNullOrWhiteSpace(Model.Query))
{
    <h2>🔎 Resultado da busca por: "@Model.Query"</h2>

    @if (Model.ObraBuscada != null)
    {
        <div class="obra-card mb-3">
            <a asp-page="/Obras/Details" asp-route-id="@Model.ObraBuscada.Id">
                <img src="@Model.ObraBuscada.Fotos.FirstOrDefault()?.Url" width="120" />
                <strong>@Model.ObraBuscada.Titulo</strong>
            </a>
            <br />
            <small>@string.Join(", ", Model.ObraBuscada.Generos.Select(g => g.Nome))</small><br />
            <span>⭐ @Model.ObraBuscada.NotaMedia</span>

            @if (Model.UsuarioId != null && !Model.IsAdmin)
            {
                <form method="post" asp-page-handler="AdicionarWatchlist" asp-route-obraId="@Model.ObraBuscada.Id">
                    <button class="btn btn-outline-success btn-sm mt-1">➕ Watchlist</button>
                </form>
            }
        </div>
    }
    else
    {
        <p>Nenhuma obra encontrada com esse nome.</p>
    }

    <hr />
}


@foreach (var (titulo, lista) in new[] {
    ("📈 Alta Hoje", Model.EmAltaDia),
    ("📊 Alta na Semana", Model.EmAltaSemana),
    ("📅 Alta no Mês", Model.EmAltaMes),
    ("📆 Alta no Ano", Model.EmAltaAno)
})
{
    <h2>@titulo</h2>
    <div class="catalogo-grid">
        @foreach (var obra in lista)
        {
            <div class="obra-card">
                <a asp-page="/Obras/Details" asp-route-id="@obra.Id">
                    <img src="@obra.Fotos.FirstOrDefault()?.Url" width="120" />
                    <strong>@obra.Titulo</strong>
                </a>
                <br />
                <small>@string.Join(", ", obra.Generos.Select(g => g.Nome))</small><br />
                <span>⭐ @obra.NotaMedia</span>
                @if (Model.UsuarioId != null && !Model.IsAdmin)
                {
                    <form method="post" asp-page-handler="AdicionarWatchlist" asp-route-obraId="@obra.Id">
                        <button type="submit" class="btn btn-outline-success btn-sm mt-1">➕ Watchlist</button>
                    </form>
                }

            </div>
        }
    </div>
}

@foreach (var genero in Model.ObrasPorGenero)
{
    <h2>🎭 Gênero: @genero.Key</h2>
    <div class="catalogo-grid">
        @foreach (var obra in genero.Value)
        {
            <div class="obra-card">
                <a asp-page="/Obras/Details" asp-route-id="@obra.Id">
                    <img src="@obra.Fotos.FirstOrDefault()?.Url" width="120" />
                    <strong>@obra.Titulo</strong>
                </a>
                <br />
                <small>@string.Join(", ", obra.Generos.Select(g => g.Nome))</small><br />
                <span>⭐ @obra.NotaMedia</span>
                @if (Model.UsuarioId != null && !Model.IsAdmin)
                {
                    <form method="post" asp-page-handler="AdicionarWatchlist" asp-route-obraId="@obra.Id">
                        <button type="submit" class="btn btn-outline-success btn-sm mt-1">➕ Watchlist</button>
                    </form>
                }

            </div>
        }
    </div>
}

<h2>⭐ Atores em Alta</h2>
<div class="catalogo-grid">
    @foreach (var ator in Model.AtoresEmAlta)
    {
        <div class="obra-card">
            <img src="@ator.Foto" width="120" />
            <a asp-page="/Atores/Details" asp-route-id="@ator.Id"><strong>@ator.Nome</strong></a><br />
            <small>@ator.DataNascimento.ToShortDateString()</small>
        </div>
    }
</div>

<style>
    .catalogo-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .obra-card {
        width: 140px;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 8px;
        text-align: center;
    }
</style>

@page
@model MyWatchList.Pages.Atores.DetailsModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Detalhes do Ator";
    var tipo = HttpContextAccessor.HttpContext.Session.GetString("UsuarioTipo");
    bool isAdmin = tipo == "Admin";
    bool editando = Model.Editando;
}

@if (isAdmin && editando)
{
    <h2>Editar Ator</h2>
    <form method="post" asp-page-handler="Salvar">
        <input type="hidden" asp-for="Ator.Id" />

        <div class="form-group">
            <label asp-for="Ator.Nome"></label>
            <input asp-for="Ator.Nome" class="form-control" />
            <span asp-validation-for="Ator.Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ator.DataNascimento"></label>
            <input asp-for="Ator.DataNascimento" class="form-control" type="date" />
            <span asp-validation-for="Ator.DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ator.Foto"></label>
            <input asp-for="Ator.Foto" class="form-control" />
            <span asp-validation-for="Ator.Foto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ator.Biografia"></label>
            <textarea asp-for="Ator.Biografia" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Ator.Biografia" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-page="./Details" asp-route-id="@Model.Ator.Id" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
}
else
{
    <h1>@Model.Ator.Nome</h1>
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Ator.Foto" alt="Foto do ator" class="img-fluid rounded mb-3" />
        </div>
        <div class="col-md-8">
            <p><strong>Data de Nascimento:</strong> @Model.Ator.DataNascimento.ToShortDateString()</p>
            <p><strong>Biografia:</strong></p>
            <p>@Model.Ator.Biografia</p>
        </div>
    </div>

    @if (isAdmin)
    {
        <div class="mt-3">
            <form method="post" asp-page-handler="Editar">
                <input type="hidden" asp-for="Ator.Id" />
                <button type="submit" class="btn btn-warning">Editar</button>
            </form>

            <form method="post" asp-page-handler="Deletar" onsubmit="return confirm('Tem certeza que deseja apagar este ator?');" class="mt-2">
                <input type="hidden" asp-for="Ator.Id" />
                <button type="submit" class="btn btn-danger">Apagar</button>
            </form>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
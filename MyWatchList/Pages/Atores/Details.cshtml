@page
@model MyWatchList.Pages.Atores.DetailsModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Detalhes do Ator";
    var tipo = HttpContextAccessor.HttpContext.Session.GetString("UsuarioTipo");
    bool isAdmin = tipo == "Admin";
    bool editando = Model.Editando;
}

<div class="page-container">
    <div class="atores-container">

        @if (isAdmin && editando)
        {
            <h2>✏ Editar Ator</h2>
            <form method="post" asp-page-handler="Salvar">
                <input type="hidden" asp-for="Ator.Id" />

                <label asp-for="Ator.Nome"></label>
                <input asp-for="Ator.Nome" class="form-control" />

                <label asp-for="Ator.DataNascimento"></label>
                <input asp-for="Ator.DataNascimento" type="date" class="form-control" />

                <label asp-for="Ator.Foto"></label>
                <input asp-for="Ator.Foto" class="form-control" />

                <label asp-for="Ator.Biografia"></label>
                <textarea asp-for="Ator.Biografia" class="form-control" rows="4"></textarea>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a asp-page="./Details" asp-route-id="@Model.Ator.Id" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        }
        else
        {
            <h1>@Model.Ator.Nome</h1>
            <div style="display:flex; gap:20px;">
                <img src="@Model.Ator.Foto" class="ator-foto-thumb" style="width:150px;height:200px;" />
                <div>
                    <p><strong>Data de Nascimento:</strong> @Model.Ator.DataNascimento.ToShortDateString()</p>
                    <p><strong>Biografia:</strong> @Model.Ator.Biografia</p>
                </div>
            </div>

            @if (isAdmin)
            {
                <div class="mt-3">
                    <form method="post" asp-page-handler="Editar" style="display:inline;">
                        <input type="hidden" asp-for="Ator.Id" />
                        <button type="submit" class="btn btn-warning">✏ Editar</button>
                    </form>

                    <form method="post" asp-page-handler="Deletar" style="display:inline;"
                          onsubmit="return confirm('Tem certeza que deseja apagar este ator?');">
                        <input type="hidden" asp-for="Ator.Id" />
                        <button type="submit" class="btn btn-danger">🗑 Apagar</button>
                    </form>
                </div>

                <hr />
                <h3>🎥 Obras associadas</h3>
                <ul>
                    @foreach (var obra in Model.ObrasDoAtor)
                    {
                        <li>@obra.Titulo</li>
                    }
                </ul>

                <h4>Adicionar a uma Obra</h4>
                <form method="post" asp-page-handler="AdicionarObra">
                    <input type="hidden" name="atorId" value="@Model.Ator.Id" />
                    <select name="obraId" class="form-control">
                        @foreach (var obra in Model.TodasObras)
                        {
                            <option value="@obra.Id">@obra.Titulo</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary mt-2">Adicionar</button>
                </form>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

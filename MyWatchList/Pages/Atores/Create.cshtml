@page
@model MyWatchList.Pages.Atores.CreateModel

@{
    ViewData["Title"] = "Criar Ator";
}

<div class="page-container">
    <div class="atores-container">
        <h1>🎭 Criar Ator</h1>

        <form method="post">
            @* Gera token antiforgery para garantir @OnPostAsync seja aceito *@
            @Html.AntiForgeryToken()

            @* Mostra mensagens de validação do ModelState (útil para debugging) *@
            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="form-group">
                <label asp-for="Ator.Nome" class="control-label"></label>
                <input asp-for="Ator.Nome" class="form-control" />
                <span asp-validation-for="Ator.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ator.DataNascimento" class="control-label"></label>
                <input asp-for="Ator.DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="Ator.DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ator.Foto" class="control-label"></label>
                <input asp-for="Ator.Foto" class="form-control" />
                <span asp-validation-for="Ator.Foto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ator.Biografia" class="control-label"></label>
                <textarea asp-for="Ator.Biografia" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Ator.Biografia" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@* Habilita validação cliente (se você tiver os scripts na _ValidationScriptsPartial) *@
    <partial name="_ValidationScriptsPartial" />
}

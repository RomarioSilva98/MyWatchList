@page
@model MyWatchList.Pages.Atores.IndexModel

@{
    ViewData["Title"] = "Lista de Atores";
}

<div class="page-container">
    <div class="atores-container">
        <h1>🎭 Lista de Atores</h1>
        <p>
            <a asp-page="Create" class="btn btn-primary">➕ Criar Novo Ator</a>
        </p>

        <table class="atores-table">
            <thead>
                <tr>
                    <th>Foto</th>
                    <th>Nome</th>
                    <th>Data de Nascimento</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ator in Model.Ator)
                {
                    <tr>
                        <td>
                            <img src="@ator.Foto" alt="@ator.Nome" class="ator-foto-thumb" />
                        </td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@ator.Id">@ator.Nome</a>
                        </td>
                        <td>@ator.DataNascimento.ToShortDateString()</td>
                        <td>
                            <a asp-page="./Details" asp-route-id="@ator.Id" class="btn btn-secondary">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@page
@model MyWatchList.Pages.Usuarios.LoginModel

<h2>🔐 Login</h2>

<form method="post">
    <label>Email:</label><br />
    <input asp-for="Email" type="email" required /><br />

    <label>Senha:</label><br />
    <input asp-for="Senha" type="password" required /><br />

    <button type="submit">Entrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.MensagemErro))
{
    <p style="color:red;">@Model.MensagemErro</p>
}
